{
    "name": "code-context",
    "version": "0.1.0",
    "description": "A powerful code indexing tool with multi-platform support",
    "private": true,
    "scripts": {
        "build": "pnpm -r --filter='!./examples/*' build && pnpm -r --filter='./examples/*' build",
        "build:core": "pnpm --filter @tan-yong-sheng/code-context-core build",
        "build:mcp": "pnpm --filter @tan-yong-sheng/code-context-mcp build",
        "dev": "pnpm -r dev",
        "dev:core": "pnpm --filter @tan-yong-sheng/code-context-core dev",
        "dev:mcp": "pnpm --filter @tan-yong-sheng/code-context-mcp dev",
        "clean": "pnpm -r clean",
        "lint": "pnpm -r lint",
        "lint:fix": "pnpm -r run lint:fix",
        "typecheck": "pnpm -r run typecheck",
        "release:core": "pnpm --filter @tan-yong-sheng/code-context-core... run build && pnpm --filter @tan-yong-sheng/code-context-core publish --access public --no-git-checks",
        "release:mcp": "pnpm --filter @tan-yong-sheng/code-context-mcp... run build && pnpm --filter @tan-yong-sheng/code-context-mcp publish --access public --no-git-checks",
        "example:basic": "pnpm --filter code-context-basic-example start",
        "benchmark": "node scripts/build-benchmark.js"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "assert": "^2.1.0",
        "browserify-zlib": "^0.2.0",
        "eslint": "^9.25.1",
        "https-browserify": "^1.0.0",
        "jest": "^30.2.0",
        "os-browserify": "^0.3.0",
        "rimraf": "^6.0.1",
        "stream-http": "^3.2.0",
        "tree-sitter-cli": "^0.25.6",
        "ts-jest": "^29.4.6",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.56.0",
        "url": "^0.11.4",
        "vm-browserify": "^1.1.2"
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=10.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tan-yong-sheng/code-context.git"
    },
    "license": "MIT",
    "author": "Cheney Zhang <277584121@qq.com>"
}
